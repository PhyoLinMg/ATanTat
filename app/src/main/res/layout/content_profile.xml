<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_round"
                android:layout_height="150dp"
            />
        <TextView
                android:text="Account Info"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/ic_name"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
            <TextView
                    android:id="@+id/text"
                    android:layout_toEndOf="@+id/image"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/profile_name"
                    android:layout_toEndOf="@+id/image"
                    android:layout_below="@+id/text"
                    android:textStyle="italic"
                    android:text="Testing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imgemail"
                    android:src="@drawable/ic_email"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
            <TextView
                    android:id="@+id/email"
                    android:layout_toEndOf="@+id/imgemail"
                    android:text="Email"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/profile_email"
                    android:layout_toEndOf="@+id/imgemail"
                    android:layout_below="@+id/email"
                    android:textStyle="italic"
                    android:text="test@example.com"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imgaddress"
                    android:src="@drawable/ic_address"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
            <TextView
                    android:id="@+id/address"
                    android:layout_toEndOf="@+id/imgaddress"
                    android:text="University"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/profile_uni"
                    android:layout_toEndOf="@+id/imgaddress"
                    android:layout_below="@+id/address"
                    android:textStyle="italic"
                    android:text="University of Testing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imgmajor"
                    android:src="@drawable/ic_dob"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>
            <TextView
                    android:id="@+id/major"
                    android:layout_toEndOf="@+id/imgmajor"
                    android:text="Major"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/profile_major"
                    android:layout_toEndOf="@+id/imgmajor"
                    android:layout_below="@+id/major"
                    android:textStyle="italic"
                    android:text="Testing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/logout"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/logout_button"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

